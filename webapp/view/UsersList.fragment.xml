<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		controllerName="sap.ui.demo.staff.controller.UsersList">
	<Table
		id="usersList"
		class="sapUiResponsiveMargin"
		growing="true"
		growingThreshold="5"
		growingScrollToLoad="true"
		width="auto"
		items="{
			path : 'users>/Users',
			sorter : {
				path : 'Position',
				group : true
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>UsersListTitle}"/>
				<OverflowToolbar>
				<ToolbarSpacer/>
				<!-- Add the Personalization button  https://openui5.hana.ondemand.com/#/entity/sap.m.Table/sample/sap.m.sample.TablePerso/code/Table.controller.js-->
				<CheckBox text="Enable Personalization Grouping" select="onTableGrouping" />
				<!-- Add the Personalization button -->
				<Button icon="sap-icon://action-settings" press="onPersoButtonPressed" >
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
			</OverflowToolbar>
				<!-- <SearchField width="30%" search=".onSearchUser"/> -->
			</Toolbar>
		</headerToolbar>
		<columns>
      <Column>
        <Text text="{i18n>User}" />
      </Column>
       <Column>
        <Text text="{i18n>Position}" />
      </Column>
			<Column>
        <Text text="{i18n>DateBirth}" />
      </Column>
			<Column>
        <Text text="{i18n>Room}" />
      </Column>
			<Column>
        <Text text="{i18n>CreatedDate}" />
      </Column>
			<Column>
        <Text text="{i18n>Computer}" />
      </Column>
			<Column>
        <Text text="{i18n>Project}" />
      </Column>
    </columns>
<items>
      <ColumnListItem type="Navigation" press=".onPress"> 
        <cells>
          <ObjectIdentifier
            title="{users>UserID}"
						text="{users>FirstName} {users>LastName}"/>
          <Text
            text="{users>Position}" />
					<Text
            text="{users>DateBirth}" />
					<Text text="{users>Room}"/>
					<Text
            text="{users>CreatedDate}" />
					<Text
            text="{users>Computer}" />	
					<Text
            text="{users>Project}" />				
        </cells>
      </ColumnListItem>
    </items>
	</Table>
</core:FragmentDefinition>