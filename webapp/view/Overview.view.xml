<mvc:View
	controllerName="sap.ui.demo.staff.controller.Overview"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page title="{i18n>homePageTitle}">
		<headerContent>
			<Button
				icon="sap-icon://sys-help-2"
				press=".onOpenHelpDialog"/>
		</headerContent>
		<content>
			<Table
				id="usersListTable"
				class="sapUiResponsiveMargin"
				growing="true"
				growingThreshold="5"
				growingScrollToLoad="true"
				width="auto"
				items="{
					path : 'users>/Users'
				}">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>UsersListTitle}"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://action-settings" press="onSettingViewColumms">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow" />
							</layoutData>
						</Button>
						<SearchField id="searchString" width="30%" search=".onSearchUser"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="FirstNameCol">
						<Text text="{i18n>FirstName}" />
					</Column>
					<Column id="LastNameCol">
						<Text text="{i18n>LastName}" />
					</Column>
					<Column id="ProjectCol">
						<Text text="{i18n>Project}" />
					</Column>
					<Column id="NameOfRoomCol">
						<Text text="{i18n>Room}" />
					</Column>
					
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onShowDetail">
						<cells>
							<ObjectIdentifier
								title="{users>UserID}"
								text="{users>LastName}"/>
							<Text text="{users>FirstName}"/>	
							<Text
								text="{users>Project}" />
								<Text text="{
								path: 'users>Room',
								formatter: '.formatter.roomName'
							}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Text text='"All rights reserved" 2019'/>
					<ToolbarSpacer/>
					<Button
						text="Add new User"
						icon="sap-icon://add-contact"
						press=".onOpenAddUserDialog"
						type="Accept"/>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>